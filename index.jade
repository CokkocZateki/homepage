html
  head
    title J4LP Home
    link(rel="shortcut icon", type="image/png", href="/favicon.png")
    link(href="/style.css", rel="stylesheet")
    link(href="//netdna.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.css", rel="stylesheet")
    link(href="//fonts.googleapis.com/css?family=Open+Sans:400,300,700", rel="stylesheet", type="text/css")
    script(src="/libs.min.js")
    script(src="/script.js")
  body
    .container
      .row
        header.col-md-6.col-md-offset-3
            h1.homepage-title.text-center
              img(src="/logo.png", alt="Bok bok!")
              | &nbsp;J4LP
            h2.homepage-subtitle.text-center Your friendly NullSec Alliance
        section.members.col-md-6.col-md-offset-3
          .legend.col-md-6.col-sm-6.col-xs-6.text-center
            .counter.js-members 0
            | members
          .legend.col-md-6.col-sm-6.col-xs-6.text-center
            .counter.js-corps 0
            | corporations
        section.col-md-6.col-md-offset-3.services-wrapper
          h3.text-center Services
          .services.row.clearfix
            ul.list-group.services-list
              each service in services
                li.list-group-item.service
                  a(href="#")
                    i(class="fa fa-fw fa-#{service.icon}")
                    span=service.name
                    small.text-overflow=service.description
            a.btn.btn-primary.btn-block.btn-lg
              i.fa.fa-fw.fa-user-plus
              | &nbsp;Join now!
        section.col-md-6.col-md-offset-3.leadership
          h3.text-center J4LP Leadership
          .row.leadership-list
            each leader in leadership
              .col-md-4.text-center.leader
                img(src="http://image.eveonline.com/Character/#{leader.id}_256.jpg", width="128")
                h4=leader.name
                p=leader.title
                p=leader.corporation
